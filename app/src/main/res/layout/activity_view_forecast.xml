<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/viewForecastLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pritshah.weatherapp.ViewForecastActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/viewDayNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day Number"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="73dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/viewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:textAppearance="@android:style/TextAppearance.Large"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="78dp"
        android:layout_marginTop="31dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viewImage" />

    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="96dp"
        android:layout_height="93dp"
        android:layout_marginEnd="58dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/viewWeatherType"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="61dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toTopOf="@+id/viewDayNumber" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:text="Weather Type:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintRight_toLeftOf="@+id/viewWeatherType"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewWeatherType"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/viewWeatherType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........."
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintRight_toLeftOf="@+id/viewImage"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewDescription"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView15" />

    <TextView
        android:id="@+id/viewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........."
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toBottomOf="@+id/viewWeatherType"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewWeatherType" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Min Temp:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/textView17"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView17" />

    <TextView
        android:id="@+id/viewMinTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........."
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/viewDescription"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewDescription" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Max Temp:"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBaseline_toBaselineOf="@+id/viewMaxTemp"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/textView19" />

    <TextView
        android:id="@+id/viewMaxTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="........."
        android:textAppearance="@android:style/TextAppearance.Medium"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/viewMinTemp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/viewMinTemp" />
</android.support.constraint.ConstraintLayout>
